---
import Section from "../Section.astro"
import HTML from "@/icons/html.astro"
import CSS from "@/icons/css.astro"
import JavaScript from "@/icons/javascript.astro"
import TypeScript from "@/icons/type.astro"
import React from "@/icons/react.astro"
import Node from "@/icons/node.astro"
import MySQL from "@/icons/mysql.astro"
import SQL from "@/icons/sql.astro"
import Git from "@/icons/git.astro"
import GitHub from "@/icons/GitHub.astro"
import Tailwind from "@/icons/tailwind.astro"
import Next from "@/icons/astroIcon.astro"
import { skills } from "@cv"
import Swift from "@/icons/mysql.astro"
import Csharp from "@/icons/csharp.astro"
import Angular from "@/icons/angular.astro"
import Net from "@/icons/dotnet.astro"
import AstroIcon from "@/icons/astroIcon.astro"

const SKILLS_ICONS: Record<string, any> = {
  HTML,
  CSS,
  JavaScript,
  TypeScript,
  React,
  Node,
  MySQL,
  Git,
  GitHub,
  Next,
  Tailwind,
  Swift,
  Csharp,
  Angular,
  Net,
  AstroIcon,
  SQL
}
---

<Section title="Skills">
  <ul>
    {
      skills.map(({ name }) => {
        let iconName = name;
        if(iconName === "Astro") {
          iconName = "AstroIcon"
        }
        else if(iconName === "SQL Server"){
          iconName = "SQL"
        }
        const Icon = SKILLS_ICONS[iconName]

        return (
          <li>
            {Icon && <Icon />} <span>{name}</span>
          </li>
        )
      })
    }
  </ul>
</Section>

<style>
  ul {
    display: inline-flex;
    gap: 8px;
    flex-wrap: wrap;
  }

  li {
    align-items: center;
    border-radius: 6px;
    border: solid 1px #efd874;
    color: #efd874;
    display: flex;
    font-size: 0.8rem;
    font-weight: 500;
    gap: 4px;
    padding: 0.2rem 0.6rem;
  }
</style>
